            <li style="float:right;"> <a href="/events/panel"> Events Panel </a></li>
        <% } %>
    </ul>
    <a href="#" id="drop">Menu<i class="icon-reorder"></i></a>
</nav>
<div class="content">
    <% if (error.length > 0) { %>
        <div style="background:#C12525;padding:1%;width:98%;color:white;text-align:center;border-radius:4px;margin:0 auto;">
            <%= error %>
        </div> <br>
    <% }  %>

    <% if (success.length > 0) { %>
    <div style="background:#0E4D6C;padding:1%;width:98%;color:white;text-align:center;border-radius:4px;margin:0 auto;">
        <%= success %>
    </div> <br>
<% }  %>