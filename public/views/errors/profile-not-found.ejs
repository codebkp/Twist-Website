<% include ../../header %>

    <div class="profile_container">
        <div class="frank_holder">
            <img src="https://i.imgur.com/LvqzThH.png">
        </div>
        <div class="alternatives">
            <h2>Profile Not Found!</h2>
            <div class="box">
                <div class="title">Similar Profiles</div>
                <div class="boxcontent" style="padding:1%;">
                    <% if (profiles.length > 0) { %>
                        <% profiles.forEach(function (profile) { %>
                            <a href="/profile/<%= profile.username %>">
                                <div class="user">
                                    <img src="https://avatar-retro.com/habbo-imaging/avatarimage?figure=<%= profile.look %>&headonly=1">
                                    <p><%= profile.username %></p>
                                </div>
                            </a>
                        <% }); %>
                    <% } else { %>
                        <p>We couldn't find any profiles similar to what you wanted</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>


<style>
    .profile_container {
        width: 70%;
        margin: 0 auto;
        color: white;
    }
    .profile_container .frank_holder {
        float: left;
        width: 10%;
    }
    .profile_container .alternatives {
        float: right;
        width: 60%;
    }
    .profile_container .alternatives h2 {
        text-transform: uppercase;
    }
    .profile_container .user {
        display: inline-block;
        margin-right: 1.5%;
        width: 28%;
        text-align: center;
        opacity: 0.8;
    }
    .profile_container .user:hover {
        opacity: 1;
    }
</style>


<% include ../../footer %>